<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:models="clr-namespace:Ejercicio04.VM"
             x:Class="Ejercicio04.Views.MainPage">

    <ContentPage.BindingContext>
        <models:TrolleoVM/>
    </ContentPage.BindingContext>

    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25">
            <Label Text="{Binding Nombre}"></Label>
            <Entry Text="{Binding Nombre}" Placeholder="Nombre"></Entry>
            <Label Text="{Binding Apellido}"></Label>
            <Entry Text="{Binding Apellido}" Placeholder="Apellido"></Entry>
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
